---
import { createWebSiteSchema, ensureTrailingSlash, type JsonLdSchema } from '~/utils/schema'

interface Props {
  title?: string
  description?: string
  url?: string
  image?: string
  canonical?: string
  author?: string
  keywords?: string
  audio?: string | null
  ldJSON?: JsonLdSchema
  ogType?: 'website' | 'article'
  publishedTime?: string
  modifiedTime?: string
  section?: string
  tags?: string[]
  noIndex?: boolean
}

const defaultTitle = 'iGaming User Acquisition Agency in Europe | MediaPath EU'
const defaultDescription =
  'MediaPath EU helps iGaming brands scale with affiliate marketing, media buying, and acquisition tools built for sustainable user growth in Europe.'
const baseOrigin = (Astro.site?.toString() ?? Astro.url.origin).replace(/\/$/, '')
const defaultPath = ensureTrailingSlash(Astro.url.pathname)
const defaultUrl = `${baseOrigin}${defaultPath}`
const defaultImage = `${baseOrigin}/images/mediapath-og.webp`

const {
  title = defaultTitle,
  description = defaultDescription,
  url = defaultUrl,
  image = defaultImage,
  canonical = defaultUrl,
  author = 'MediaPath EU',
  keywords = 'igaming marketing, user acquisition, affiliate marketing, media buying, mediapath eu',
  audio = null,
  ldJSON = createWebSiteSchema({ url: Astro.site?.toString(), description }),
  ogType = 'website',
  publishedTime,
  modifiedTime,
  section,
  tags = [],
  noIndex = false,
} = Astro.props

const descSize = 170
let displayDescription = description
if (description.length > descSize) {
  displayDescription = `${description.substring(0, descSize - 3)}...`
}

const titleFix = title || (image.split('/').pop() || '.').split('.')[0]
const canonicalUrl = ensureTrailingSlash(canonical)
const pageUrl = ensureTrailingSlash(url)
---

<link rel="sitemap" href="/sitemap-index.xml" />

<meta charset="utf-8" />
<meta name="theme-color" content="#0f172a" />
<meta name="generator" content={Astro.generator} />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="format-detection" content="telephone=no" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="keywords" content={keywords} />

<link rel="canonical" href={canonicalUrl} />
<link rel="icon" href="/favicon.png" sizes="any" />

<title set:html={title} />
<meta name="title" content={title} />
<meta name="author" content={author} />
<meta name="description" content={displayDescription} />

<meta property="og:url" content={pageUrl} />
<meta property="og:title" content={title} />
<meta property="og:type" content={ogType} />
<meta property="og:locale" content="en_US" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={titleFix} />
<meta property="og:image:secure_url" content={image} />
<meta property="og:image:url" content={image} />
<meta property="og:image" content={image} />
<meta property="og:image:type" content="image/webp" />
<meta property="article:author" content={author} />
<meta name="robots" content={noIndex ? 'noindex, nofollow' : 'index, follow'} />

{
  audio && (
    <>
      <meta property="og:audio" content={audio} />
      <meta property="og:audio:type" content="audio/mpeg" />
    </>
  )
}

{ogType === 'article' && publishedTime && <meta property="article:published_time" content={publishedTime} />}
{ogType === 'article' && modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
{ogType === 'article' && section && <meta property="article:section" content={section} />}
{ogType === 'article' && tags.length > 0 && tags.map((tag: string) => <meta property="article:tag" content={tag} />)}

<meta property="og:site_name" content="MediaPath EU" />
<meta property="og:description" content={displayDescription} />

<meta name="twitter:url" content={pageUrl} />
<meta name="twitter:site" content="@mediapatheu" />
<meta name="twitter:title" content={title} />
<meta name="twitter:image" content={image} />
<meta name="twitter:image:alt" content={titleFix} />
<meta name="twitter:creator" content="@mediapatheu" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:description" content={displayDescription} />

<script is:inline type="application/ld+json" set:html={JSON.stringify(ldJSON)} />
