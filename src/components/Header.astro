---
const navLinks = [
  { text: 'Home', url: '/' },
  { text: 'About', url: '/about/' },
  { text: 'Services', url: '/services/' },
  { text: 'Articles', url: '/articles/' },
  { text: 'Blog', url: '/blog/' },
]
---

<header class="sticky top-0 z-40 border-b border-slate-200 bg-white/95 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    <a href="/" class="text-xl font-black tracking-tight text-slate-900" aria-label="MediaPath EU home">
      MediaPath EU
    </a>

    <nav class="hidden items-center gap-6 md:flex" aria-label="Primary">
      {
        navLinks.map((link) => (
          <a href={link.url} class="text-sm font-semibold text-slate-700 transition-colors hover:text-slate-900">
            {link.text}
          </a>
        ))
      }
    </nav>

    <button
      id="mobile-menu-button"
      type="button"
      class="rounded border border-slate-300 px-3 py-1 text-sm font-semibold text-slate-700 md:hidden"
      aria-label="Toggle navigation menu"
      aria-expanded="false"
      aria-haspopup="true"
    >
      Menu
    </button>
  </div>

  <nav id="mobile-menu" class="hidden border-t border-slate-200 bg-white px-4 py-3 md:hidden" aria-label="Mobile primary">
    <ul class="flex flex-col gap-3">
      {
        navLinks.map((link) => (
          <li>
            <a href={link.url} class="block text-sm font-semibold text-slate-700 transition-colors hover:text-slate-900">
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button')
    const menu = document.getElementById('mobile-menu')

    if (!button || !menu) return

    button.addEventListener('click', () => {
      const isOpen = !menu.classList.contains('hidden')
      menu.classList.toggle('hidden', isOpen)
      button.setAttribute('aria-expanded', String(!isOpen))
    })
  })
</script>
