---
import Layout, { type SEOProps } from '~/layouts/Layout.astro'

const seo: SEOProps = {
  title: 'Page Not Found and Navigation Help | MediaPath EU',
  description: 'The page you requested could not be found. Return to MediaPath EU homepage and continue browsing services, articles, and marketing resources.',
  noIndex: true,
}
---

<Layout seo={seo}>
  <section class="mx-auto max-w-3xl px-4 py-20 text-center">
    <p class="text-sm font-semibold uppercase tracking-wide text-gray-500">404</p>
    <h1 class="mt-2 text-4xl font-black tracking-tight text-slate-900">Page not found</h1>
    <p class="mt-4 text-lg text-slate-700">The page you requested does not exist.</p>
    <a href="/" class="mt-8 inline-block rounded-lg bg-slate-900 px-5 py-3 text-sm font-semibold text-white hover:bg-slate-950">Go back home</a>
  </section>
</Layout>
