---
export const prerender = true

import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import { createWebPageSchema } from '~/utils/schema'

const services = [
  {
    title: 'Affiliate Marketing',
    description:
      'We connect your brand with high-performing partners and publishers so you receive qualified traffic that turns into high-value players.',
    image: '/images/mediapath-icon-results.webp',
    alt: 'Affiliate marketing growth icon',
  },
  {
    title: 'Media Buying',
    description:
      'Our team secures premium placements, manages budget allocation, and continuously optimizes targeting to maximize conversion efficiency.',
    image: '/images/mediapath-hero.webp',
    alt: 'Digital media buying strategy image',
  },
  {
    title: 'Acquisition Tools',
    description:
      'We implement practical tracking and optimization tooling that gives your team real-time visibility and stronger campaign control.',
    image: '/images/mediapath-icon-traffic.webp',
    alt: 'User acquisition technology icon',
  },
  {
    title: 'SaaS and B2B Marketing Support',
    description: 'We also support B2B and SaaS offers connected to iGaming, applying the same performance-led growth discipline.',
    image: '/images/mediapath-solutions.webp',
    alt: 'B2B marketing support image',
  },
]

const seo: SEOProps = {
  title: 'iGaming Marketing Services in Europe | MediaPath EU',
  description:
    'Discover MediaPath EU services: affiliate marketing, media buying, user acquisition tooling, and B2B growth support for iGaming-focused businesses.',
  keywords: 'igaming services, affiliate marketing agency, media buying europe, user acquisition tools',
  canonical: `${Astro.site}services/`,
  image: `${Astro.site}images/mediapath-og.webp`,
  ldJSON: createWebPageSchema({
    name: 'MediaPath EU Services',
    url: `${Astro.site}services/`,
    description:
      'Affiliate marketing, media buying, user acquisition tooling, and B2B growth support for iGaming-focused businesses.',
    image: `${Astro.site}images/mediapath-og.webp`,
  }),
}
---

<Layout seo={seo}>
  <section class="mx-auto max-w-6xl px-4 py-16" id="services">
    <div class="rounded-3xl bg-slate-900 p-8 text-white md:p-10">
      <h1 class="text-4xl font-black tracking-tight md:text-5xl">Services for iGaming Growth</h1>
      <p class="mt-4 max-w-3xl text-lg text-slate-200">
        At MediaPath, we deliver a full suite of services designed to grow your online presence and acquire new users with a strict focus on performance.
      </p>
      <p class="mt-3 max-w-3xl text-slate-300">
        Every engagement is tailored around your market, growth stage, and commercial goals to keep execution efficient and results measurable.
      </p>
    </div>

    <div class="mt-10 grid gap-6 md:grid-cols-2">
      {
        services.map((service) => (
          <article class="overflow-hidden rounded-2xl border border-slate-200 bg-white">
            <img src={service.image} alt={service.alt} width="1200" height="900" class="h-44 w-full object-cover" loading="lazy" decoding="async" />
            <div class="p-6">
            <h2 class="text-xl font-bold text-slate-900">{service.title}</h2>
            <p class="mt-3 text-slate-700">{service.description}</p>
            </div>
          </article>
        ))
      }
    </div>

    <div class="mt-10 rounded-3xl border border-slate-200 bg-white p-8 text-center">
      <h2 class="text-2xl font-black text-slate-900 md:text-3xl">Start your affiliate campaign with MediaPath</h2>
      <p class="mt-3 text-slate-700">Ready to scale traffic and user acquisition? Build your next growth sprint with a team specialized in iGaming.</p>
      <a href="/about/" class="mt-6 inline-flex rounded-full bg-slate-900 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-950">Work with us</a>
    </div>
  </section>
</Layout>
