---
export const prerender = true

import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import { createWebSiteSchema } from '~/utils/schema'

const seo: SEOProps = {
  title: 'iGaming User Acquisition Agency in Europe | MediaPath EU',
  description:
    'MediaPath EU helps iGaming brands grow through affiliate marketing, media buying, and acquisition tools to drive sustainable customer growth in Europe.',
  keywords: 'igaming acquisition agency, affiliate marketing, media buying, user acquisition europe, mediapath',
  image: `${Astro.site}images/mediapath-og.webp`,
  canonical: `${Astro.site}`,
  ldJSON: createWebSiteSchema({
    url: Astro.site?.toString(),
    description:
      'MediaPath EU helps iGaming brands grow through affiliate marketing, media buying, and acquisition tools to drive sustainable customer growth in Europe.',
  }),
}
---

<Layout seo={seo}>
  <section class="mx-auto max-w-6xl px-4 py-16 md:py-24">
    <div class="rounded-2xl bg-gradient-to-br from-slate-900 via-slate-800 to-blue-900 p-8 text-white shadow-lg md:p-12">
      <p class="text-sm font-semibold uppercase tracking-wide text-blue-200">MediaPath EU</p>
      <h1 class="mt-4 text-4xl font-black leading-tight md:text-5xl">iGaming User Acquisition Agency in Europe</h1>
      <p class="mt-6 max-w-3xl text-lg text-blue-100">
        We help iGaming companies scale with performance marketing, affiliate partnerships, paid media, and smart acquisition tooling. Our focus is profitable,
        sustainable growth.
      </p>
      <div class="mt-8 flex flex-wrap gap-3">
        <a href="/services/" class="rounded-lg bg-white px-5 py-3 text-sm font-semibold text-slate-900 hover:bg-slate-100">Explore Services</a>
        <a href="/about/" class="rounded-lg border border-blue-200 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10">About MediaPath</a>
      </div>
    </div>

    <section class="mt-10 grid gap-6 md:grid-cols-2" aria-labelledby="who-we-help">
      <article class="rounded-xl border border-slate-200 bg-white p-6">
        <h2 id="who-we-help" class="text-2xl font-bold text-slate-900">Who We Help</h2>
        <p class="mt-3 text-slate-700">
          We work with iGaming operators, affiliate networks, SaaS providers, and B2B teams that need measurable acquisition growth and better channel efficiency.
        </p>
        <p class="mt-3 text-slate-700">
          If your team is planning expansion into new markets or needs more predictable user acquisition, our service model is built to connect strategy and execution.
        </p>
      </article>
      <article class="rounded-xl border border-slate-200 bg-white p-6">
        <h2 class="text-2xl font-bold text-slate-900">Growth Approach</h2>
        <p class="mt-3 text-slate-700">
          We combine strategy, campaign execution, and optimization loops to improve traffic quality, lower acquisition costs, and increase conversion consistency.
        </p>
        <p class="mt-3 text-slate-700">
          Learn more about our full delivery model on the <a href="/services/" class="font-semibold underline">services page</a> or read positioning details on the
          <a href="/about/" class="font-semibold underline">about page</a>.
        </p>
      </article>
    </section>
  </section>
</Layout>
