---
export const prerender = true

import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import { createWebSiteSchema } from '~/utils/schema'

const strengths = [
  {
    image: '/images/mediapath-icon-specialized-team.webp',
    alt: 'Specialized iGaming team icon',
    text: 'Specialized team with deep knowledge of the iGaming sector.',
  },
  {
    image: '/images/mediapath-icon-results.webp',
    alt: 'Affiliate marketing and media buying results icon',
    text: 'Proven success in affiliate marketing and media buying.',
  },
  {
    image: '/images/mediapath-icon-traffic.webp',
    alt: 'High-quality traffic acquisition icon',
    text: 'Expertise in acquiring high-quality traffic for your business.',
  },
]

const services = [
  {
    title: 'Affiliate Marketing',
    description:
      'We connect iGaming brands with high-performing affiliate partners and publishers to drive qualified traffic and high-value players.',
  },
  {
    title: 'Digital Media Buying',
    description:
      'We secure premium ad placements and optimize media spend to bring targeted traffic that converts consistently.',
  },
  {
    title: 'Acquisition Tools',
    description:
      'We deploy practical tracking and optimization tools so your team can improve user acquisition and performance in real time.',
  },
]

const seo: SEOProps = {
  title: 'iGaming User Acquisition Agency in Europe | MediaPath EU',
  description:
    'MediaPath EU helps iGaming brands grow through affiliate marketing, media buying, and acquisition tools to drive sustainable customer growth in Europe.',
  keywords: 'igaming acquisition agency, affiliate marketing, media buying, user acquisition europe, mediapath',
  image: `${Astro.site}images/mediapath-og.webp`,
  canonical: `${Astro.site}`,
  ldJSON: createWebSiteSchema({
    url: Astro.site?.toString(),
    description:
      'MediaPath EU helps iGaming brands grow through affiliate marketing, media buying, and acquisition tools to drive sustainable customer growth in Europe.',
  }),
}
---

<Layout seo={seo}>
  <section class="relative overflow-hidden bg-slate-950 text-white">
    <div aria-hidden="true" class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_rgba(20,184,166,0.35),_transparent_40%)]"></div>
    <div aria-hidden="true" class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,_rgba(14,165,233,0.2),_transparent_45%)]"></div>
    <div class="relative mx-auto grid max-w-7xl gap-10 px-4 py-16 md:grid-cols-[1.15fr_0.85fr] md:items-center md:py-24">
      <div>
        <p class="text-sm font-semibold uppercase tracking-[0.2em] text-cyan-200">MediaPath EU</p>
        <h1 class="mt-4 text-4xl font-black leading-tight tracking-tight md:text-6xl">
          Drive Targeted Traffic and Maximize User Acquisition in iGaming
        </h1>
        <p class="mt-6 max-w-2xl text-lg text-slate-200">
          MediaPath specializes in affiliate marketing, media buying, and user acquisition for the global iGaming industry. We build practical growth systems that
          deliver results.
        </p>
        <div class="mt-8 flex flex-wrap gap-3">
          <a href="/services/" class="rounded-full bg-cyan-300 px-6 py-3 text-sm font-semibold text-slate-900 transition hover:bg-cyan-200">Start your campaign</a>
          <a
            href="/about/"
            class="rounded-full border border-cyan-200/70 px-6 py-3 text-sm font-semibold text-white transition hover:bg-white/10"
          >
            About MediaPath
          </a>
        </div>
      </div>
      <div class="relative">
        <div class="absolute -inset-4 rounded-3xl bg-gradient-to-br from-cyan-300/20 to-blue-300/10 blur-xl"></div>
        <img
          src="/images/mediapath-hero.webp"
          alt="MediaPath team planning digital media buying strategy for iGaming campaigns"
          width="1024"
          height="1024"
          class="relative w-full rounded-3xl border border-white/15 object-cover shadow-2xl"
          loading="eager"
          decoding="async"
          fetchpriority="high"
        />
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-4 py-16">
    <div class="grid gap-6 md:grid-cols-3">
      {
        strengths.map((strength) => (
          <article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-lg">
            <img
              src={strength.image}
              alt={strength.alt}
              width="320"
              height="320"
              class="h-14 w-14 rounded-xl object-cover"
              loading="lazy"
              decoding="async"
            />
            <p class="mt-4 text-base font-medium text-slate-700">{strength.text}</p>
          </article>
        ))
      }
    </div>
  </section>

  <section class="mx-auto grid max-w-7xl gap-8 px-4 pb-8 md:grid-cols-[0.95fr_1.05fr] md:items-center">
    <img
      src="/images/mediapath-solutions.webp"
      alt="Tailored iGaming growth solutions by MediaPath"
      width="1200"
      height="900"
      class="w-full rounded-3xl border border-slate-200 object-cover shadow-md"
      loading="lazy"
      decoding="async"
    />
    <div class="rounded-3xl bg-slate-900 p-8 text-white md:p-10">
      <h2 class="text-3xl font-black leading-tight md:text-4xl">Tailored Marketing Solutions for iGaming Success</h2>
      <p class="mt-5 text-slate-200">
        At MediaPath, we are a dedicated affiliate marketing and digital media buying agency specializing in the iGaming industry. Our strategies are designed to
        drive efficient and scalable growth with qualified audiences and measurable outcomes.
      </p>
      <p class="mt-4 text-slate-300">
        Our global reach and innovative approach help iGaming platforms connect with the right players at the right time while optimizing traffic quality, engagement,
        and cost efficiency.
      </p>
      <a href="/about/" class="mt-7 inline-flex rounded-full border border-cyan-200/80 px-5 py-2 text-sm font-semibold text-cyan-100 transition hover:bg-white/10">
        Learn about MediaPath
      </a>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-4 py-16">
    <h2 class="text-3xl font-black tracking-tight text-slate-900 md:text-4xl">Services</h2>
    <p class="mt-3 max-w-3xl text-slate-700">
      We offer a focused service stack for iGaming growth, combining affiliate partnerships, paid media execution, and acquisition technology.
    </p>
    <div class="mt-8 grid gap-6 md:grid-cols-3">
      {
        services.map((service) => (
          <article class="rounded-2xl border border-slate-200 bg-white p-6">
            <h3 class="text-xl font-bold text-slate-900">{service.title}</h3>
            <p class="mt-3 text-slate-700">{service.description}</p>
          </article>
        ))
      }
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-4 pb-16">
    <div class="grid gap-8 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm md:grid-cols-[1.1fr_0.9fr] md:items-center md:p-10">
      <div>
        <h2 class="text-3xl font-black tracking-tight text-slate-900 md:text-4xl">Why Choose MediaPath?</h2>
        <p class="mt-4 text-slate-700">
          Our approach blends creative strategy and measurable execution. We focus on sustainable iGaming growth through data-informed decisions and practical campaign
          delivery.
        </p>
        <ul class="mt-5 space-y-3 text-slate-700">
          <li><strong>Innovative and data-driven:</strong> campaigns refined continuously for better results.</li>
          <li><strong>Specialized in iGaming:</strong> deep understanding of player acquisition and retention dynamics.</li>
          <li><strong>Global expertise:</strong> support for local expansion and cross-market growth goals.</li>
          <li><strong>Proven track record:</strong> stronger traffic quality, improved retention, and better ROI.</li>
        </ul>
      </div>
      <img
        src="/images/mediapath-icon-results.webp"
        alt="MediaPath proven performance in affiliate marketing and media buying"
        width="320"
        height="320"
        class="mx-auto h-56 w-56 rounded-3xl border border-slate-200 object-cover"
        loading="lazy"
        decoding="async"
      />
    </div>
  </section>

  <section class="bg-slate-950 py-16 text-white">
    <div class="mx-auto max-w-4xl px-4 text-center">
      <h2 class="text-3xl font-black tracking-tight md:text-4xl">Ready to Elevate Your iGaming Brand?</h2>
      <p class="mt-4 text-lg text-slate-200">
        Contact MediaPath today to discover how we can drive traffic and acquire users for your iGaming platform.
      </p>
      <div class="mt-7 flex flex-wrap items-center justify-center gap-3">
        <a href="/services/" class="rounded-full bg-cyan-300 px-6 py-3 text-sm font-semibold text-slate-900 transition hover:bg-cyan-200">Explore services</a>
        <a href="/blog/" class="rounded-full border border-slate-300 px-6 py-3 text-sm font-semibold text-white transition hover:bg-white/10">Read insights</a>
      </div>
    </div>
  </section>
</Layout>
