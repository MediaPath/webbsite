---
export const prerender = true

import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import { createWebPageSchema } from '~/utils/schema'

const seo: SEOProps = {
  title: 'About iGaming Growth Consultancy in Europe | MediaPath',
  description:
    'Learn how MediaPath EU supports iGaming businesses with user acquisition strategy, execution, and performance-focused marketing support across Europe.',
  keywords: 'about mediapath, igaming consultancy europe, user acquisition experts',
  canonical: `${Astro.site}about/`,
  image: `${Astro.site}images/mediapath-og.webp`,
  ldJSON: createWebPageSchema({
    name: 'About MediaPath EU',
    url: `${Astro.site}about/`,
    description:
      'MediaPath EU supports iGaming businesses with user acquisition strategy, execution, and performance-focused marketing support across Europe.',
    image: `${Astro.site}images/mediapath-og.webp`,
  }),
}
---

<Layout seo={seo}>
  <section class="mx-auto max-w-6xl px-4 py-16">
    <div class="grid gap-8 md:grid-cols-[1fr_0.9fr] md:items-center">
      <div>
        <h1 class="text-4xl font-black tracking-tight text-slate-900 md:text-5xl">About MediaPath EU</h1>
        <p class="mt-5 text-lg text-slate-700">
          MediaPath is a dedicated affiliate marketing and digital media buying agency specialized in iGaming. We combine sector expertise with practical execution
          to help brands grow faster and smarter.
        </p>
        <p class="mt-4 text-slate-700">
          We focus on high-quality user acquisition, scalable campaign structures, and measurable outcomes. Every strategy is tailored to your market priorities,
          budget constraints, and growth targets.
        </p>
      </div>
      <img
        src="/images/mediapath-logo.webp"
        alt="MediaPath EU brand logo"
        width="124"
        height="98"
        class="mx-auto h-44 w-56 rounded-3xl border border-slate-200 bg-white object-contain p-8 shadow-sm"
        loading="lazy"
        decoding="async"
      />
    </div>

    <div class="mt-10 rounded-3xl bg-slate-900 p-8 text-white md:p-10">
      <h2 class="text-2xl font-black md:text-3xl">What Makes MediaPath Different</h2>
      <p class="mt-4 text-slate-200">
        Our global reach and innovative approach let us activate the best mix of affiliate partnerships and media buying channels for your goals. We help iGaming
        platforms reach the right audience at the right time while optimizing for engagement and efficiency.
      </p>
    </div>

    <div class="mt-10 grid gap-6 md:grid-cols-2">
      <article class="rounded-2xl border border-slate-200 bg-white p-6">
        <h2 class="text-xl font-bold text-slate-900">Mission</h2>
        <p class="mt-3 text-slate-700">Deliver measurable and sustainable user acquisition outcomes for iGaming companies operating in competitive markets.</p>
      </article>
      <article class="rounded-2xl border border-slate-200 bg-white p-6">
        <h2 class="text-xl font-bold text-slate-900">Core Expertise</h2>
        <p class="mt-3 text-slate-700">Affiliate marketing, digital media buying, and acquisition technology built around performance and long-term growth.</p>
      </article>
    </div>
  </section>
</Layout>
