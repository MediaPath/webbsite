{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server",
      "type": "shell",
      "command": "bun",
      "args": ["dev"],
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Local\\s+http"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "close": true
      }
    }
  ]
}
